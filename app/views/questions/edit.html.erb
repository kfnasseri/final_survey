<!-- Validation failure messages -->

<% if @question.errors.any? %>
  <% @question.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Edit Question #<%= @question.id %></h3>
      </div>
      <div class="panel-body">
        <form action="/update_question/<%= @question.id %>" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for answer_type -->
          <div class="form-group">
            <label for="answer_type" class="col-sm-2 control-label">
              Answer type
            </label>
            <div class="col-sm-10">
              <input type="text" id="answer_type" name="answer_type" placeholder="Answer type" class="form-control" value="<%= @question.answer_type %>">
            </div>
          </div>

          <!-- Label and input for survey_id -->
          <div class="form-group">
            <label for="survey_id" class="col-sm-2 control-label">
              Survey
            </label>
            <div class="col-sm-10">
              <input type="text" id="survey_id" name="survey_id" placeholder="Survey" class="form-control" value="<%= @question.survey_id %>">
            </div>
          </div>

          <!-- Label and input for label -->
          <div class="form-group">
            <label for="label" class="col-sm-2 control-label">
              Label
            </label>
            <div class="col-sm-10">
              <textarea id="label" name="label" placeholder="Label" class="form-control" rows="3"><%= @question.label %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-warning">
                Update Question
              </button>
              or
              <a href="/questions/<%= @question.id %>">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


<!-- End responsive panel example -->
