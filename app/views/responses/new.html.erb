<!-- Validation failure messages -->

<% if @response.errors.any? %>
  <% @response.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<!-- Responsive panel example -->

<div class="row">
  <div class="col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title">Add Response</h3>
      </div>
      <div class="panel-body">
        <form action="/create_response" method="post" class="form-horizontal">
          <!-- Hidden input for authenticity token to protect from forgery -->
          <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

          <!-- Label and input for question_id -->
          <div class="form-group">
            <label for="question_id" class="col-sm-2 control-label">
              Question
            </label>
            <div class="col-sm-10">
              <input type="text" id="question_id" name="question_id" placeholder="Question" class="form-control" value="<%= @response.question_id %>">
            </div>
          </div>

          <!-- Label and input for user_id -->
          <div class="form-group">
            <label for="user_id" class="col-sm-2 control-label">
              User
            </label>
            <div class="col-sm-10">
              <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @response.user_id %>">
            </div>
          </div>

          <!-- Label and input for answer -->
          <div class="form-group">
            <label for="answer" class="col-sm-2 control-label">
              Answer
            </label>
            <div class="col-sm-10">
              <textarea id="answer" name="answer" placeholder="Answer" class="form-control" rows="3"><%= @response.answer %></textarea>
            </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
              <button class="btn btn-success">
                Create Response
              </button>
              or
              <a href="/responses">Cancel</a>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- End responsive panel example -->
